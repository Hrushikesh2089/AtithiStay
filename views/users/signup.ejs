<!-- BOILERPLATE FOR NAVBAR AND FOOTER -->
<% layout("/layouts/boilerplate") %>
<%- include("../includes/flash.ejs") %>

<div class="container">

    <!-- SIGNUP FORM -->
    <div class="row mt-3">
        <h3 class="col-sm-11 col-md-8 col-lg-6 offset-sm-0 offset-md-2 offset-lg-3">SignUp on AtithiStay</h3>
        <div class="col-sm-11 col-md-8 col-lg-6 offset-sm-0 offset-md-2 offset-lg-3 mt-3">
            <form action="/signup" method="POST" novalidate class="needs-validation">
    
                <!-- USERNAME -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" type="text" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
    
                <!-- EMAIL -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" type="email" class="form-control" required>
                </div>

                <!-- CONTACT -->
                <div class="mb-3">
                    <lable for="ownerContact" class="form-label">Phone number</lable>
                    <input name="ownerContact" type="number" class="form-control" id="ownerContact" required>
                </div>
    
                <!-- PASSWORD -->
                <div class="mb-3">
                    <label for="password" class="form-label">Create Password</label>
                    <input name="password" id="password" type="password" class="form-control" required>
                </div>
    
                <!-- IF ALREADY REGISTERED -->
                <div class="sign-up-or-log-in">
                  <button class="btn btn-success">SignUp</button>
                  <p>If already registered then <a href="/login">LogIn</a></p>
                </div>
    
            </form>
        </div>
    </div>
</div>