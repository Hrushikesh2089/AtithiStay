<!-- BOILERPLATE FOR NAVBAR AND FOOTER -->
<% layout("/layouts/boilerplate") %>
<%- include("../includes/flash.ejs") %>

<div class="container">
    <!-- SIGNUP FORM -->
    <div class="row mt-3 login-form">
        <h3 class="col-sm-11 col-md-8 col-lg-6 offset-sm-0 offset-md-2 offset-lg-3">Login to AtithiStay</h3>
        <div class="col-sm-11 col-md-8 col-lg-6 offset-sm-0 offset-md-2 offset-lg-3 mt-3">
            <form action="/login" method="POST" novalidate class="needs-validation">
    
                <!-- USERNAME -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" type="text" class="form-control" required>
                </div>
    
                <!-- PASSWORD -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" type="password" class="form-control" required>
                </div>
    
                <!-- IF NOT REGISTERED -->
                <div class="sign-up-or-log-in">
                    <button class="btn btn-success">LogIn</button>
                    <p>If not registered yet, then <a href="/signup">SignUp</a></p>
                </div>
            </form>
        </div>
    </div>
</div>